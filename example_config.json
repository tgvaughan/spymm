{
    "server": {
        "host": "smtp.example.com",
        "port": 25,
        "use_tls": true,
        "login": {
            "username": "user",
            "password": "pass"
        }
    },

    "mailouts": [
        {
            "from": "me@example.com",
            "to": "{Email}",
            "subject": "Subject for each email",
            "recipients": "recipients.csv",
            "template": "acceptance.template",
            "rules": ["'{Accepted}' == 'Yes'"]
        },
        {
            "from": "me@example.com",
            "to": "{Email}",
            "subject": "Subject for each email",
            "recipients": "recipients.csv",
            "template": "rejection.template",
            "rules": ["'{Accepted}' != 'Yes'"]
        }
    ]
}
